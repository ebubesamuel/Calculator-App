<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDisplayScreen"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/background"
        android:cursorVisible="true"
        android:gravity="end|bottom"
        android:padding="10dp"
        android:text=""
        android:textCursorDrawable="@null"
        android:textSize="45sp" />

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_weight="1"
       >
       <Button
           android:id="@+id/btn7"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:text="7"
           android:textSize="30dp"
           android:layout_margin="5dp"
           android:onClick="onDigit"
           android:backgroundTint="@color/btnNumbers"

           />

       <Button
           android:id="@+id/btn8"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:text="8"
           android:textSize="30dp"
           android:layout_margin="5dp"
           android:onClick="onDigit"
           android:backgroundTint="@color/btnNumbers"


           />
       <Button
           android:id="@+id/btn9"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:text="9"
           android:textSize="30dp"
           android:layout_margin="5dp"
           android:onClick="onDigit"
           android:backgroundTint="@color/btnNumbers"

           />
       <Button
           android:id="@+id/btnDivide"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:text="/"
           android:textSize="30dp"
           android:layout_margin="5dp"
           android:onClick="onOperator"
           android:backgroundTint="@color/btnOperators"
           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"

        >
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:backgroundTint="@color/btnNumbers"

            />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:backgroundTint="@color/btnNumbers"


            />
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:backgroundTint="@color/btnNumbers"

            />
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="*"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onOperator"
            android:backgroundTint="@color/btnOperators"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:backgroundTint="@color/btnNumbers"
            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:backgroundTint="@color/btnNumbers"


            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:backgroundTint="@color/btnNumbers"

            />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onOperator"

            android:backgroundTint="@color/btnOperators"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDigit"
            android:backgroundTint="@color/btnNumbers"

            />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onDecimal"
            android:backgroundTint="@color/btnNumbers"


            />
        <Button
            android:id="@+id/btnCLR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CLR"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:onClick="onClear"
            android:backgroundTint="@color/btnCLR"


            />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onOperator"
            android:backgroundTint="@color/btnOperators"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/btnEqualsTo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="="
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onEqual"
            android:backgroundTint="@color/btnOperators"
            />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="%"
            android:textSize="30dp"
            android:layout_margin="5dp"
            android:onClick="onPercentage"
            android:backgroundTint="@color/btnOperators"
            />


    </LinearLayout>






</LinearLayout>